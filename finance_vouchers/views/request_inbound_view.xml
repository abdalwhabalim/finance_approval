<odoo>
    <data>


        <record id="cash_inbound_search" model="ir.ui.view">
            <field name="name">request.inbound.search</field>
            <field name="model">request.inbound</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="currency_id"/>
                    <field name="amount"/>
                    <filter string="My Requests" name="my_request" domain="[('user_id', '=', uid)]"/>
                    <filter name="state" string="Posted"/>
                </search>
            </field>
        </record>


        <record id="cash_inbound_tree" model="ir.ui.view">
            <field name="name">request.inbound.tree</field>
            <field name="model">request.inbound</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="request_date"/>
                    <field name="currency_id"/>
                    <field name="user_name" widget="many2one_avatar_user"/>
                    <field name="state"/>
                    <field name="amount" sum="Total"/>

                </tree>
            </field>
        </record>

        <record id="expense_all_tree" model="ir.ui.view">
            <field name="name">request.inbound.all.tree</field>
            <field name="model">request.inbound.line</field>
            <field name="arch" type="xml">
                <tree  create="false" edit="false" delete="false">
                    <field name="user_name"/>
                    <field name="name"/>
                    <field name="doc_attachment_id" widget="many2many_binary"/>
                    <!--<field name="analytic_accont_id"/>-->
                    <field name="state"/>
                    <field name="amount" sum="Total Expenses"/>
                </tree>
            </field>
        </record>


