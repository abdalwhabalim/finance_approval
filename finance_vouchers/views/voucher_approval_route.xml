<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="voucher_team_tree" model="ir.ui.view">
            <field name="name">voucher.team.custom.tree</field>
            <field name="model">voucher.team.custom</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="active" invisible="True"/>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="voucher_team_form" model="ir.ui.view">
            <field name="name">voucher.team.custom.form</field>
            <field name="model">voucher.team.custom</field>
            <field name="arch" type="xml">
                <form string="voucher Team" class="o_sale_team">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="user_id" domain="[('share', '=', False)]" widget="many2one_avatar_user"/>
                            </group>
                            <group>
                                <field name="company_id" groups="base.group_multi_company"
                                       options="{'no_create': True}"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <field name="lock_amount_total"/>
                            </group>
                            <group></group>
                        </group>
                        <notebook>
                            <page name="approvers" string="Approvers">
                                <field name="approver_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="user_id"/>
                                        <field name="role"/>
                                        <field name="min_amount"/>
                                        <field name="max_amount"/>
                                        <field name="company_currency_id" invisible="True"/>
                                        <field name="lock_amount_total"/>
                                        <field name="custom_condition_code"/>
                                    </tree>
                                </field>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!--        <record id="view_sale_order_filter_approver" model="ir.ui.view">-->
        <!--            <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>-->
        <!--            <field name="name">view_sale_order_filter_approver</field>-->
        <!--            <field name="model">sale.order</field>-->
        <!--            <field name="arch" type="xml">-->
        <!--                <filter name="state" position="before">-->
        <!--                    <filter name="waiting_for_approval" string="Waiting for Approval"-->
        <!--                            domain="[('current_approver', '!=', False)]"/>-->
        <!--                    <filter name="waiting_for_my_approval" string="Waiting for My Approval"-->
        <!--                            domain="[('current_approver', '!=', False), ('current_approver.user_id', '=', uid)]"/>-->
        <!--                    <separator/>-->
        <!--                </filter>-->
        <!--            </field>-->
        <!--        </record>-->

        <record id="voucher_team_act_window" model="ir.actions.act_window">
            <field name="name">Voucher Teams</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">voucher.team.custom</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No team found. Let's create one!
                </p>
            </field>
        </record>

        <menuitem name="Voucher Teams" id="voucher_team_menu" action="voucher_team_act_window"
                  parent="account.menu_finance" sequence="50"/>


        <record id="voucher_approval_form" model="ir.ui.view">
            <field name="name">voucher.approval.form</field>
            <field name="inherit_id" ref="finance_vouchers.cash_voucher_form"/>
            <field name="model">cash.voucher</field>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='confirm_manager']" position="after">
                    <button name="button_approve" class="oe_highlight" string="Approve" attrs="{'invisible':[('is_current_approver', '=', False)]}" type="object"/>
<!--                        <attribute name="groups"></attribute>-->
<!--                        <attribute name="attrs">{'invisible':['|', ('is_current_approver', '=', False)]}</attribute>-->
                </xpath>
                <xpath expr="//field[@name='amount']" position="after">
                    <field name="voucher_approval_route" invisible="True"/>
<!--                    <field name="is_current_approver" />-->
                    <field name="team_custom_id" />

                </xpath>
                <xpath expr="//field[@name='state']" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,to approve,done,cancel"/>
                </xpath>
<!--                <xpath expr="//button[@name='action_cancel']" position="attributes">-->
<!--                    <attribute name="attrs">{'invisible' : ['|',('state', 'not in', ['to approve','sale','sent']),('is_current_approver', '=', False)]}</attribute>-->
<!--                </xpath>-->
                <xpath expr="//notebook" position="inside">
                    <page name="approval_route" string="Approval Route" attrs="{'invisible':[('team_custom_id', '=', False)]}">
                        <field name="approver_ids">
                            <tree>
                                <field name="user_id" widget="many2one_avatar_user"/>
                                <field name="role"/>
                                <field name="state" widget="badge" decoration-danger="state == 'pending'" decoration-success="state == 'approved'"/>

                            </tree>
                        </field>
                        <field name="is_current_approver" invisible="True"/>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>